{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "define"     : true,
    "$"          : true,
    "jQuery"     : true,
    "_"          : true,
    "Backbone"   : true,
    "Marionette" : true
  },
  "plugins": [],
  "rules": {
    "array-bracket-spacing": [2, "never"],
    "arrow-body-style": 2,
    "block-scoped-var": 2,
    "block-spacing": [2, "always"],
    "brace-style": 2,
    "camelcase": 2,
    "comma-spacing": [2, {"before": false, "after": true}],
    "comma-style": 2,
    "complexity": [2, 5],
    "computed-property-spacing": [2, "never"],
    "curly": [ 2, "multi-line" ],
    "dot-location": [2, "property"],
    "dot-notation": 2,
    "eqeqeq": [ 2, "allow-null" ],
    "guard-for-in": 2,
    "indent": [2, 2, {"SwitchCase": 1}], // 2 spaces
    "key-spacing": [2, {"beforeColon": false, "afterColon": true}],
    "keyword-spacing": [2, {"overrides": {
      "if": {"after": false},
      "for": {"after": false},
      "while": {"after": false},
      "switch": {"after": false}
    }}],
    "no-alert": 2,
    "no-bitwise": 2,
    "no-caller": 2,
    "no-case-declarations": 2,
    "no-cond-assign": [ 2, "except-parens" ],
    "no-const-assign": 2,
    "no-debugger": 2,
    "no-div-regex": 2,
    "no-duplicate-imports": 2,
    "no-else-return": 2,
    "no-empty": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-irregular-whitespace": 2,
    "no-iterator": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-multiple-empty-lines": 2,
    "no-multi-spaces": 2,
    "no-multi-str": 2,
    "no-new-wrappers": 2,
    "no-proto": 2,
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-spaced-func": 2,
    "no-shadow": 2,
    "no-undef": 2,
    "no-undef-init": 2,
    "no-unexpected-multiline": 2,
    "no-unneeded-ternary": 2,
    "no-unused-vars": [1, {"args": "none"}],
    "no-useless-concat": 2,
    "no-var": 2,
    "no-with": 2,
    "object-curly-spacing": [2, "always"],
    "one-var": [2, "never"],
    "operator-linebreak": [2, "before", { "overrides": { "?": "after", ":": "after" } }],
    "padded-blocks": [2, "never"],
    "prefer-const": 2,
    "prefer-template": 2,
    "quotes": [ 2, "single" ],
    "quote-props": [2, "consistent"],
    "radix": [2, "always"],
    "semi": [ 2, "always" ],
    "semi-spacing": [2, {"before": false, "after": true }],
    "space-before-blocks": 2,
    "space-before-function-paren": [2, "never"],
    "space-in-parens": [2, "never"],
    "spaced-comment": [2, "always"],
    "space-infix-ops": 2,
    "strict": 0,
    "template-curly-spacing": [2, "always"],
    "valid-typeof": 2,
    "wrap-iife": [ 2, "inside" ]
  }
}
